@model RecipesProject.Models.Recipe

@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "~/Views/Shared/_Cheflayout.cshtml";
}

<style>
    /* Custom Styles */
    .form-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        color: #343a40;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-back {
        margin-top: 20px;
    }
</style>

<h1 class="text-center mb-4">Create Recipe</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Chefid" class="control-label">Chef ID</label>
                        <select asp-for="Chefid" class="form-control">
                            <option value="@Context.Session.GetInt32("Userid")">@Context.Session.GetInt32("Userid")</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Categoryid" class="control-label">Category</label>
                        <select asp-for="Categoryid" class="form-control" asp-items="ViewBag.Categoryid"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Recipename" class="control-label">Recipe Name</label>
                        <input asp-for="Recipename" class="form-control" />
                        <span asp-validation-for="Recipename" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ingredients" class="control-label">Ingredients</label>
                        <textarea asp-for="Ingredients" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instructions" class="control-label">Instructions</label>
                        <textarea asp-for="Instructions" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Instructions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagepath" class="control-label">Image Path</label>
                        <input asp-for="Imagepath" class="form-control" />
                        <span asp-validation-for="Imagepath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Price</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Approvalstatus" class="control-label">Approval Status</label>
                        <input asp-for="Approvalstatus" class="form-control" />
                        <span asp-validation-for="Approvalstatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center btn-back">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
