@model RecipesProject.Models.Recipe

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipename)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipename)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <!-- Display other properties similarly -->
    </dl>

    <form id="deleteForm" asp-action="DeleteConfirmed" asp-route-id="@Model.Recipeid" method="post">
        <button type="button" onclick="confirmDelete()" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<script>
    function confirmDelete() {
        var result = confirm("Are you sure you want to delete this recipe?");
        if (result) {
            document.getElementById('deleteForm').submit();
        }
    }
</script>
