@model User
@* @{
    Layout = "~/Views/Shared/_Guestlayout.cshtml";
} *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Form</title>
    <style>
        body {
            background-color: rgb(239, 232, 232);
            background-image: url('/images/Login.jpg'); /* Update the path as needed */
            background-repeat: no-repeat;
            background-size: cover;
        }

        .form-container {
            position: relative;
            max-width: 400px;
            background-repeat: no-repeat;
            background-color: transparent;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 20px;
            backdrop-filter: blur(55px);
            padding: 2rem 3rem;
            margin: auto;
            background-position: center;
        }

        .form-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .form-head {
            font-size: 2rem;
            color: #fff;
        }

        .form-para {
            font-size: 1.2rem;
            color: #fff;
            margin-top: 0.5rem;
        }

        .inputbox {
            margin-bottom: 1rem;
        }

            .inputbox input {
                width: 100%;
                height: 40px;
                background-color: #fff;
                border: none;
                outline: none;
                font-size: 1rem;
                padding: 0 10px;
            }

            .inputbox label {
                color: #fff;
                font-size: 1rem;
                margin-bottom: 0.5rem;
                display: block;
            }

        .signinbutton {
            width: 100%;
            height: 40px;
            border-radius: 40px;
            background-color: rgba(255, 255, 255, 1);
            border: none;
            outline: none;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.4s ease;
        }

            .signinbutton:hover {
                background-color: rgba(255, 255, 255, 0.5);
            }
    </style>
</head>

<body>
    <div class="form-container">
        <div class="form-header">
            <h2 class="form-head">Sign Up</h2>
            <p class="form-para">Create your account. It's free.</p>
        </div>

        <form asp-action="Register" method="post" enctype="multipart/form-data">
            <div class="inputbox">
                <label asp-for="Username">Your Name</label>
                <input id="Username" name="Username" class="form-control" placeholder="Your Name" required />
            </div>

            <div class="inputbox">
                <label asp-for="Email">Your Email</label>
                <input id="Email" name="Email" class="form-control" placeholder="Your Email" required />
            </div>

            <div class="inputbox">
                <label asp-for="Password">Password</label>
                <input id="Password" name="Password" type="password" class="form-control" placeholder="Your Password" required />
            </div>


            <div class="custom-select">
                <label asp-for="Roleid">Choose Role</label>
                <select id="Roleid" name="Roleid" class="form-control" size="1" required>
                    <option value="3">User</option>
                    <option value="2">Chef</option>
                </select>
            </div>


            <div class="inputbox">
                <label asp-for="ImageFile">Image</label>
                <input id="ImageFile" name="ImageFile" type="file" required />
            </div>

            <button type="submit" class="buttonbg signinbutton">Sign Up</button>
        </form>
    </div>
</body>
</html>
