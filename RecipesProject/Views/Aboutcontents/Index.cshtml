@model IEnumerable<RecipesProject.Models.Aboutcontent>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paragraph)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paragraph)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Aboutcontentid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Aboutcontentid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Aboutcontentid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
